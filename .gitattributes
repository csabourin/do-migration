# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.php text eol=lf
*.js text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.css text eol=lf
*.scss text eol=lf

# Templates
*.twig text eol=lf
*.html text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Shell scripts
*.sh text eol=lf

# Config files
.editorconfig text eol=lf
.gitattributes text eol=lf
.gitignore text eol=lf

# Exclude files from export (reduces package size)
/.github export-ignore
/.gitattributes export-ignore
/.gitignore export-ignore
/.editorconfig export-ignore
/tests export-ignore
/phpunit.xml export-ignore
/phpunit.xml.dist export-ignore
/.phpcs.xml export-ignore
/.phpcs.xml.dist export-ignore
/phpstan.neon export-ignore
/phpstan.neon.dist export-ignore

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
