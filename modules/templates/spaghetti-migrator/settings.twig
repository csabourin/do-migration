{# JavaScript for import using AJAX to avoid form nesting issues #}
{% js %}
(function() {
    'use strict';

    // Craft adds "settings-" prefix to IDs
    var importBtn = document.getElementById('settings-import-btn');
    var fileInput = document.getElementById('settings-import-file-input');

    if (!importBtn || !fileInput) {
        console.warn('Import elements not found');
        return;
    }

    importBtn.addEventListener('click', async function(e) {
        e.preventDefault();
        e.stopPropagation();

        var file = fileInput.files[0];

        if (!file) {
            Craft.cp.displayError('Please select a file to import.');
            return;
        }

        if (!file.name.toLowerCase().endsWith('.json')) {
            Craft.cp.displayError('Please select a JSON file.');
            return;
        }

        // Show confirmation dialog
        if (!confirm('Import settings from "' + file.name + '"?\n\nThis will overwrite your current configuration.\n\nClick OK to proceed or Cancel to abort.')) {
            return;
        }

        // Show loading state
        importBtn.classList.add('loading');
        importBtn.setAttribute('disabled', 'disabled');
        var originalText = importBtn.textContent;
        importBtn.textContent = 'Importing...';

        try {
            // Create FormData
            var formData = new FormData();
            formData.append('settingsFile', file);

            // Use Craft's sendActionRequest
            var response = await Craft.sendActionRequest('POST', 'spaghetti-migrator/settings/import', {
                data: formData
            });

            // Success
            Craft.cp.displayNotice('Settings imported successfully. Reloading...');

            // Reload after a short delay to show the success message
            setTimeout(function() {
                window.location.reload();
            }, 800);

        } catch (error) {
            // Error handling
            console.error('Import error:', error);

            var errorMessage = 'Import failed.';
            if (error.response && error.response.data && error.response.data.message) {
                errorMessage = error.response.data.message;
            } else if (error.message) {
                errorMessage = error.message;
            }

            Craft.cp.displayError(errorMessage);

            // Reset button state
            importBtn.classList.remove('loading');
            importBtn.removeAttribute('disabled');
            importBtn.textContent = originalText;
            fileInput.value = '';
        }
    });
})();
{% endjs %}
