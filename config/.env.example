# ============================================================================
# Migration Configuration - Environment Variables
# ============================================================================

# Environment (dev, staging, prod)
MIGRATION_ENV=dev

# DigitalOcean Spaces Credentials
DO_S3_ACCESS_KEY=your_access_key_here
DO_S3_SECRET_KEY=your_secret_key_here
DO_S3_BUCKET=your-bucket-name
DO_S3_REGION=tor1

# DigitalOcean Spaces Base URL (depends on environment)
# Dev:
DO_S3_BASE_URL=https://dev-medias-test.tor1.digitaloceanspaces.com

# Staging:
# DO_S3_BASE_URL=https://staging-medias.tor1.digitaloceanspaces.com

# Production:
# DO_S3_BASE_URL=https://medias.tor1.digitaloceanspaces.com

# DigitalOcean Spaces Subfolders
DO_S3_SUBFOLDER_IMAGES=images
DO_S3_SUBFOLDER_OPTIMISEDIMAGES=optimisedImages
DO_S3_SUBFOLDER_IMAGETRANSFORMS=imageTransforms
DO_S3_SUBFOLDER_DOCUMENTS=documents
DO_S3_SUBFOLDER_VIDEOS=videos
DO_S3_SUBFOLDER_FORMDOCUMENTS=formDocuments
DO_S3_SUBFOLDER_CHARTDATA=chartData
DO_S3_SUBFOLDER_QUARANTINE=quarantine
